<%= f = form_for @changeset, "#",
  id: "game-form",
  phx_target: @myself,
  phx_change: "validate",
  phx_submit: "save" %>

  <%= label f, :name, gettext "Give it a name" %>
  <%= text_input f, :name %>
  <%= error_tag f, :name %>

  <%= submit gettext "Let's go!", phx_disable_with: "Starting game..." %>
</form>
