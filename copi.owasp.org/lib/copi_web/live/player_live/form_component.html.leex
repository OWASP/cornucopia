<h2><%= @title %></h2>

<%= f = form_for @changeset, "#",
  id: "player-form",
  phx_target: @myself,
  phx_change: "validate",
  phx_submit: "save" %>

  <%= label f, :name %>
  <%= text_input f, :name %>
  <%= error_tag f, :name %>

  <%= hidden_input f, :game_id %>
  <%= submit "Join Game", phx_disable_with: "Joining..." %>
</form>
